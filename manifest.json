{
  "manifest_version": 2,
  "name": "SendHerePlz",
  "description": "Check if Amazon sends to your address from the list of products",
  "version": "1.5",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "include_globs": ["https://www.amazon.*/*"],
      "css": ["styles/loader.css", "styles/products.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": "img/sendhereplz-logo-128.png"
  },
  "icons": {
    "128": "img/sendhereplz-logo-128.png"
  }
}
